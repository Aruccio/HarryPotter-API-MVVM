<Application x:Class="HarryPotter.MainApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HarryPotter.MainApplication"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="VioletBrush" Color="DarkOrchid" />
        <SolidColorBrush x:Key="GreenBrush" Color="Green"/>
        <SolidColorBrush x:Key="LightGreenBrush" Color="LightGreen"/>

        <Style TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="LightGreen" />
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>