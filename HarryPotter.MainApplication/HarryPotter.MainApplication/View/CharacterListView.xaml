<UserControl x:Class="HarryPotter.MainApplication.View.CharacterListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HarryPotter.MainApplication.View"
             xmlns:viewmodel="clr-namespace:HarryPotter.MainApplication.ViewModel"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1500"
             Background="Bisque">
    <UserControl.DataContext>
        <viewmodel:CharacterListViewModel />
    </UserControl.DataContext>
    <Grid>
        <DataGrid ItemsSource="{Binding Characters}">
        </DataGrid>
    </Grid>
</UserControl>